<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agenda.controlador.VistaRaizController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Persona">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleNew" text="Nuevo" />
              <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Abrir" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Guardar" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Guardar como" />
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Salir" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Anotacion">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleNew" text="Nuevo" />
                  <MenuItem mnemonicParsing="false" onAction="#handleOpenAnotaciones" text="Abrir" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAnotaciones" text="Guardar" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAsAnotaciones" text="Guardar como" />
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Salir" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Volver">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#manejadorBotonVolver" text="Volver" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
